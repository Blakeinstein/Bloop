{
  "package": {
    "productName": "Bloop",
    "version": "0.4.3"
  },
  "build": {
    "distDir": "dist",
    "devPath": "http://localhost:8080",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "Blaine",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["./scripts", "./config/default.toml"],
      "externalBin": [],
      "copyright": "Blaine",
      "category": "DeveloperTool",
      "shortDescription": "A hackable scratchpad for developers!",
      "longDescription": "A hackable scratchpad for developers!",
      "deb": {
        "depends": [],
        "useBootstrapper": false
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "",
        "useBootstrapper": false,
        "exceptionDomain": "",
        "signingIdentity": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
        "active": false,
        "endpoints": [
            "https://bloop-updates.azurewebsites.net/api/{{target}}/{{current_version}}"
        ],
        "dialog": false,
        "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ4Q0RGQzI4QUFBOTJCMwpSV1N6a3FxS3d0K01CTC9nck1WSVcwczhha3NyZ3dER2hsNFN6WDluandDdXlrOGNoc1hrNjhmVgo="
    },
    "allowlist": {
      "all": false,
      "window": {
        "all": true
      },
      "fs": {
        "all": false,
        "path": true
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "Bloop",
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "focus": true,
        "center": true,
        "fileDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: http: https: 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self'"
    }
  }
}
